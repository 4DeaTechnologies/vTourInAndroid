<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/adapter_hotel_list_item_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="#999"/>

        <TextView
            android:id="@+id/adapter_hotel_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/adapter_hotel_list_item_thumbnail"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Hotel Swaroop Vilas"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/adapter_hotel_list_item_thumbnail"
            android:layout_below="@+id/adapter_hotel_list_item_title"
            android:textColor="@color/material_grey_600"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Rs. 5000"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>